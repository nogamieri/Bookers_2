<div class="row">
<div class="col-md-6 col-md-offset-3">
	<h1>Editing Book</h1>
	<% if @book.errors.any? %>
  <div>
  	<h2 style="color: red"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
	<!-- form_for部分 -->
	<%= form_for(@book) do |f| %>
	    <div class="form-group">
	    <h4>Title</h4>
	    <%= f.text_field :title ,class: "form-control" %>
	    </div>
	    <div class="form-group">
	    <h4>Opinion</h4>
	    <%= f.text_area :body ,class: "form-control" %>
		</div>
	    <%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
	<% end %>

	<%= link_to "Show",book_path(@book) %>|<%= link_to "Back",books_path %>
</div>
</div>
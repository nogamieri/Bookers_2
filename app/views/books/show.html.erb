<div class="container">
	<div class="row">
	<%= render 'layouts/mypage', user: @book.user, book:@book_new  %>

	<div class="col-xs-9">
		<div class="bookdetail">
			<p>Book detail</p>
			<table class="table table-hover">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
					<th></th>
				</tr>
				</thead>
				<tbody>
				<tr>
					<td><%= link_to user_path(@book.user) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpg',  fallback:"no_image.jpg", size:'40x40' %>
						<br><%= @user.name %>
						<% end %></td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					<% if @book.user == current_user %>
					<td>
					<%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
					</td>
					<td>
					<%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete %>
					</td>
					<% end %>
				</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<p id="notice">
 		<%= notice %>
		</p>
		<div class="top-message col-md-offset-3 col-md-6">
			<h1>welcome to
			<span class="glyphicon glyphicon-book"></span>
			<strong>Bookers</strong>  !!</h1>
			<p>In
			<span class="glyphicon glyphicon-book"></span>
			<strong>Bookers</strong>  ,</h1>
			<p>you can share and exchange  your opinions , inpressions , and emotions</p>
			<p> about various books!</p>
		</div>
		<% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
		  <!-- ユーザーがログインしていた時の処理 -->
		<div class="class="btn-wrapper>
			<div class="row">
				<%= link_to "Log in", user_path(current_user.id), class: "post btn btn-info col-xs-10 col-xs-offset-1 sign_in" %> <!-- ログイン画面に移行する -->
			</div>
			<div class="row">
				<%= link_to "Sign Up", user_path(current_user.id), class: 'post' %> <!-- 新規登録画面に移行する -->
			</div>
		</div>
		<!-- ログインしていなかった時の処理 -->
		<% else %>
		<div class="class="btn-wrapper>
			<div class="row">
				<%= link_to "Log in", new_user_session_path, class: "post btn btn-info col-xs-10 col-xs-offset-1 sign_in" %> <!-- ログイン画面に移行する -->
			</div>
			<div class="row">
				<%= link_to "Sign Up", new_user_registration_path, class: "post btn btn-success col-xs-10 col-xs-offset-1 sign_up" %> <!-- 新規登録画面に移行する -->
			</div>
		</div>
		<% end %>
	</div>

</div>
<div class="container">
	<div class="row">
			<%= render 'layouts/mypage', user: current_user, book:@book %>

		<div class="col-xs-9">
			<div class="userindex">
				<p>Users</p>
				<table class="table table-hover">
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, format: 'jpg',  fallback:"no_image.jpg", size:'40x40' %></td>
						<td><%= user.name %></td>
						<td><%= link_to("Show",user_path(user.id)) %></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>>
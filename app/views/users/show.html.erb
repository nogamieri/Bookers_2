<div class="container">
	<div class="row">
		<% if @user.errors.any? %>
  		<div class = "alert">
    		<ul>
      		<% @user.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      		<% end %>
    		</ul>
  		</div>
		<% end %>
		
	<%= render 'layouts/mypage', user: @user, book:@book_new  %>

		<div class="col-xs-9">
			<div class="bookdetail">
				<p>Books</p>
				<table class="table table-hover">
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpg',  fallback:"no_image.jpg", size:'40x40' %></td></td>
						<td><%= link_to(book.title,book_path(book.id)) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>